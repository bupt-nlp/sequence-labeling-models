{
  "train_data_path": "./data/train_base.json",
  "dataset_reader": {
    "type": "ccks-trigger",
    "tokenizer": "bert-base-chinese",
    "token_indexers": "bert-base-chinese"
  },
  "model": {
    "type": "simple_tagger",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "pretrained_transformer",
          "model_name": "bert-base-chinese"
        }
      }
    },
    "encoder": {
      "type": "pass_through",
      "input_dim": 768
    },
    "calculate_span_f1": true,
    "label_encoding": "BIOUL"
  },
  "data_loader":{
    "batch_size": 64,
    "shuffle": true
  },
  "trainer":{
    "optimizer": {
      "type": "adagrad"
    },
    "patience": 3,
    "num_epochs": 10,
    "cuda_device": 3
  }
}