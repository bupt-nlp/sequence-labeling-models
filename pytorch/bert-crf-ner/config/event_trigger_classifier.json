{
  "train_data_path": "./data/train_base.json",
  "dataset_reader": {
    "type": "ccks-trigger",
    "tokenizer": "bert-base-chinese",
    "token_indexers": "bert-base-chinese"
  },
  "model": {
    "type": "CrfTagger",
    "model_name": "bert-base-chinese"
  },
  "data_loader":{
    "batch_size": 64,
    "shuffle": true
  },
  "trainer":{
    "optimizer": {
      "type": "adagrad"
    },
    "patience": 3,
    "num_epochs": 10,
    "cuda_device": 3
  }
}