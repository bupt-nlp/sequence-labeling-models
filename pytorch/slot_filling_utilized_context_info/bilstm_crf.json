{
  "dataset_reader": {
    "type": "sequence_tagging"
  },
  "train_data_path": "./label_data/label_train.txt",
  "data_loader": {
    "batch_size": 64,
    "shuffle": true
  },
  "model": {
    "type": "crf_tagger",
    "text_field_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 200
        }
      }
    },
    "encoder": {
      "type": "lstm",
      "input_size": 200,
      "hidden_size": 100,
      "num_layers": 2,
      "dropout": 0.3
    },
    "calculate_span_f1": true,
    "label_encoding": "BIO"
  },
  "trainer": {
    "optimizer": "adagrad",
    "patience": 10,
    "serialization_dir": "./output/bilstm_crf",
    "cuda_device": 2
  }
}